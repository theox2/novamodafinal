# Habilitar reescrita de URL
RewriteEngine On

# CORS Headers para todas as requisições
<IfModule mod_headers.c>
    # Permitir qualquer origem (desenvolvimento)
    Header set Access-Control-Allow-Origin "*"
    
    # Métodos permitidos
    Header set Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS"
    
    # Headers permitidos
    Header set Access-Control-Allow-Headers "Content-Type, Authorization, X-Requested-With"
    
    # Cache preflight por 24h
    Header set Access-Control-Max-Age "86400"
</IfModule>

# Responder automaticamente às requisições OPTIONS
RewriteCond %{REQUEST_METHOD} OPTIONS
RewriteRule ^(.*)$ $1 [R=200,L]

# PHP Configuration
<IfModule mod_php.c>
    php_flag display_errors Off
    php_flag log_errors On
    php_value error_log /tmp/php-errors.log
</IfModule>

# Permitir acesso às pastas da API
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /Novamoda/
    
    # Permitir acesso direto aos arquivos PHP da API
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^api/(.*)$ api/$1 [L,QSA]
</IfModule>

# Permitir acesso JSON
<FilesMatch "\.(json)$">
    Header set Content-Type "application/json; charset=utf-8"
</FilesMatch>

# Cache para assets
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/jpg "access plus 1 month"
    ExpiresByType image/jpeg "access plus 1 month"
    ExpiresByType image/gif "access plus 1 month"
    ExpiresByType image/png "access plus 1 month"
    ExpiresByType text/css "access plus 1 week"
    ExpiresByType application/javascript "access plus 1 week"
</IfModule>